<%= simple_form_for @slip, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :slip_number %>
  <%= f.association :pier, include_blank: false %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                slips_path, :class => 'btn btn-default' %>

<% end %>
