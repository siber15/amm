<%- model_class = Station -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:harbour_id) %>:</strong></dt>
  <dd><%= @station.harbour_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:placement) %>:</strong></dt>
  <dd><%= @station.placement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ip) %>:</strong></dt>
  <dd><%= @station.ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_seen) %>:</strong></dt>
  <dd><%= @station.last_seen %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_station_path(@station), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              station_path(@station),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
