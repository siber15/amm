<%= simple_form_for @device, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :slip_id %>
  <%= f.input :active %>
  <%= f.input :device_number %>
  <%= f.input :mac_address %>
  <%= f.input :last_seen %>
  <%= f.input :install_date %>
  <%= f.input :software_version %>
  <%= f.input :hardware_version %>
  <%= f.input :current_status %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn btn-default' %>
<% end %>
