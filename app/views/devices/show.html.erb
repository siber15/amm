<%- model_class = Device -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:slip_id) %>:</strong></dt>
  <dd><%= @device.slip_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @device.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_number) %>:</strong></dt>
  <dd><%= @device.device_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mac_address) %>:</strong></dt>
  <dd><%= @device.mac_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_seen) %>:</strong></dt>
  <dd><%= @device.last_seen %></dd>
  <dt><strong><%= model_class.human_attribute_name(:install_date) %>:</strong></dt>
  <dd><%= @device.install_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:software_version) %>:</strong></dt>
  <dd><%= @device.software_version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hardware_version) %>:</strong></dt>
  <dd><%= @device.hardware_version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_status) %>:</strong></dt>
  <dd><%= @device.current_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:killed_date) %>:</strong></dt>
  <dd><%= @device.killed_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              devices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_device_path(@device), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              device_path(@device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "KILL", kill_device_path(@device), method: :post, data: { confirm: "Are you sure?"}, class: "btn btn-danger"%>
