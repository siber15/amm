<%- model_class = Harbour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @harbour.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @harbour.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @harbour.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @harbour.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @harbour.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @harbour.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @harbour.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @harbour.active %></dd>
</dl>


<table class="table table-hover">
  <thead>
    <th>
      Navn
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <!-- each loop rundt om tr pÃ¥ @harbour.piers som giver dig en pier hvor du kan hente pier.name  -->
    <%  @harbour.piers.each do |pier| %>
      <tr>
        <td>
          <%= link_to pier.name, harbour_piers_path(@harbour, pier)  %>
        </td>
        <td>
          Action 1
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "Piers", harbour_piers_path(@harbour), class: "btn btn-default" %>

# sigurd : skal det ikke ind under piers i stedet for harbours
<%= link_to "Boatslips", harbour_slips_path(@harbour), class: "btn btn-default"  %>


<%= link_to t('.back', :default => t("helpers.links.back")),
              harbours_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_harbour_path(@harbour), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              harbour_path(@harbour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
